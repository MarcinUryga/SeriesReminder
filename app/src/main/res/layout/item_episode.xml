<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/episodeImageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/image_of_episode"
            android:scaleType="centerCrop"
            android:transitionName="imageTransition"
            tools:src="@drawable/ic_movie_placeholder" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/episodeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:transitionName="titleTransition"
                tools:text="1. Enemy Of States" />

            <TextView
                android:id="@+id/airDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/episodeTitle"
                android:transitionName="airDateTransition"
                tools:text="Date: 2018-02-11" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>